# arch linux with systemd aliases
if [[ "$LSB_DISTRIBUTOR" == "archlinux" ]]; then
  # statements
  alias ctl='sudo systemctl '
  alias start=" sudo systemctl start"
  alias stop=" sudo systemctl stop"
  alias status=" sudo systemctl status"
  alias restart=" sudo systemctl restart"
  alias reboot="sudo systemctl start reboot.target"
fi

# Unix
alias cp='cp -pi'
alias grip='grep --color=auto'
alias ls='ls --color'
alias mkdir="mkdir -p"
alias mv='mv -i'

# Rails
alias migrate="bundle exec rake db:migrate db:rollback && bundle exec rake db:migrate"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
